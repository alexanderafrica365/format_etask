{{!
    @template format_etask/footer

    This template renders the eTask popover.

    Example context (json):
    {
        "select": "<form><select><option>...</option></select></form>",
        "pagingbar": "<nav><ul><li>...</li></ul></nav>"
    }
}}

<div class="d-flex justify-content-md-between justify-content-center flex-wrap">
    <div class="mt-1 mr-2">
        {{{select}}}
    </div>
    <div class="mr-2">
        {{{pagingbar}}}
    </div>
    <div class="mt-2">
        <span class="mr-1 d-none d-md-inline">{{#str}}legend, format_etask{{/str}}</span>
        <span class="badge badge-warning completed p-2">{{#str}}gradeitemcompleted, format_etask{{/str}}</span>
        <span class="badge badge-success passed p-2">{{#str}}gradeitempassed, format_etask{{/str}}</span>
        <span class="badge badge-danger failed p-2">{{#str}}gradeitemfailed, format_etask{{/str}}</span>
    </div>
</div>